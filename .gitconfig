[core]
	commentChar = %
	excludesfile = ~/.gitignore_global
	quotepath = false
[include]
	path = ~/.gitconfig_local
[alias]
	br = branch
	st = status
	co = checkout
	sw = switch
	rs = restore
[pager]
	log = "if [ -f ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight ]; then ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight | less; else less; fi"
	show = "if [ -f ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight ]; then ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight | less; else less; fi"
	diff = "if [ -f ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight ]; then ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight | less; else less; fi"
[interactive]
	diffFilter = "if [ -f ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight ]; then ${PACKAGE_MANAGER_PREFIX_PATH}/share/git-core/contrib/diff-highlight/diff-highlight; else cat; fi"
[diff]
	compactionHeuristic = true
